# Configuración del entorno
ENVIRONMENT=development  # development, production

# Configuración de la base de datos
# PostgreSQL (principal - requerido):
DATABASE_URL=postgresql+psycopg2://usuario:password@localhost:5432/jigs_validation
# DATABASE_URL=postgresql+psycopg2://usuario:password@host:5432/dbname?sslmode=require

# SQLite (solo para desarrollo local, opcional):
# DATABASE_URL=sqlite:///./jigs_validation.db

# Configuración de CORS
# En desarrollo, usar '*' para permitir todos los orígenes
# En producción, especificar dominios exactos separados por comas (sin espacios):
# CORS_ORIGINS=https://app.tudominio.com,https://admin.tudominio.com
CORS_ORIGINS=*

# Configuración de Redis (caché)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Configuración de Asana
ASANA_API_KEY=tu_api_key_de_asana_aqui
ASANA_PROJECT_ID=tu_project_id_de_asana_aqui

# Configuración de seguridad
# IMPORTANTE: En producción, generar una SECRET_KEY segura usando:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=tu_clave_secreta_super_segura_aqui
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=15

# Configuración de Sentry (monitoreo y alertas)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Configuración de logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=false  # true, false
LOG_FILE_PATH=logs/app.log

# Configuración de almacenamiento
REPORTS_DIR=reports
ARCHIVE_DIR=reports/archived
CLEANUP_DAYS=365  # Días antes de eliminar PDFs antiguos
COMPRESS_DAYS=180  # Días antes de comprimir PDFs
DISK_SPACE_WARNING_THRESHOLD=85  # Porcentaje de disco usado para advertencia
DISK_SPACE_CRITICAL_THRESHOLD=95  # Porcentaje de disco usado crítico

# Configuración SSL/TLS para producción
# Ruta a los archivos de certificado SSL (solo necesario en producción)
# Para obtener certificados gratuitos, usa Let's Encrypt: https://letsencrypt.org/
# SSL_KEYFILE=/path/to/private.key
# SSL_CERTFILE=/path/to/certificate.crt
# FORCE_HTTPS=true  # Forzar redirección HTTP a HTTPS en producción

# Configuración del servidor
HOST=0.0.0.0
PORT=8000
RELOAD=true  # false en producción