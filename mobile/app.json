{
  "expo": {
    "name": "Hisense CheckApp",
    "slug": "jigs-validation",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.empresa.jigsvalidation",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Esta app usa Face ID para autenticación rápida y segura."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.empresa.jigsvalidation",
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "name": "Hisense CheckApp - Web",
      "description": "Hisense CheckApp - Sistema de validación de jigs industriales",
      "themeColor": "#2196F3",
      "backgroundColor": "#0F0F0F",
      "lang": "es",
      "scope": "/",
      "startUrl": "/",
      "display": "standalone",
      "orientation": "any",
      "build": {
        "babel": {
          "include": [
            "expo-image-picker"
          ]
        }
      }
    },
    "plugins": [
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Permitir acceso a la cámara para escanear códigos QR"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir acceso a la cámara para tomar fotos"
        }
      ],
      "expo-secure-store",
      "@react-native-community/datetimepicker",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Permitir que $(PRODUCT_NAME) use Face ID para autenticación rápida y segura."
        }
      ]
    ],
    "sdkVersion": "54.0.0"
  }
}
